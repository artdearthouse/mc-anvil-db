# HopperMC Environment Configuration

# Database connection string
DATABASE_URL=postgres://postgres:postgres@db:5432/hoppermc

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hoppermc

# World generator: "flat" or "vanilla"
GENERATOR=vanilla

# World seed (for vanilla generator)
SEED=12345

# Memory and performance
CACHE_SIZE=500
PREFETCH_RADIUS=2

# Storage mode: 
# - "nostorage" (stateless, generator only) 
# - "pg_raw"     (PostgreSQL BLOB, formerly "raw")
# - "pg_jsonb"   (PostgreSQL Structured JSON, queryable/GIN)
STORAGE=pg_raw

RUST_LOG=info
MC_DATA_VERSION=4671

# Docker Compose Profiles
# Set to "storage" to start PostgreSQL database.
# Leave empty for "nostorage" mode to skip DB container startup.
COMPOSE_PROFILES=storage